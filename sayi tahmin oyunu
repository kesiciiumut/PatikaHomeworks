               break;

           }else {

               if (selected<number){
                   System.out.println("seçmiş olduğunuz sayı gizli sayıdan küçüktür");

               }else {
                   System.out.println("seçmiş olduğunuz sayı gizli sayıdan büyüktür");
               }
            }right++;
           System.out.println("kalan hakkınız "+(5-right));

       }





    }
}
